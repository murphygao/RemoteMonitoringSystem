<Window x:Class="RMS.Agent.OutOfServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Out of Service" Height="768" Width="1024" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Icon="Resources/oss_warning.png" Loaded="Window_Loaded" Topmost="true" Cursor="None">
    <Window.Background>
        <ImageBrush ImageSource="Resources/oss_background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/oss_context.png" Stretch="None"/>
        </Grid.Background>
        <Frame x:Name="mainFrame" Content="" HorizontalAlignment="Center"  Margin="0" VerticalAlignment="Center" NavigationUIVisibility="Hidden"/>
        <Label x:Name="txtCurrentVersion" Content="" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="196" HorizontalContentAlignment="Right" FontSize="22" Height="39" Foreground="#FF333333" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
