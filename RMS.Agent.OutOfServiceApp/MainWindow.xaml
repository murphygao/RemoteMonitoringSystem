<Window x:Class="RMS.Agent.OutOfServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Out of Service" Height="768" Width="1024" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" Topmost="True" Icon="Resources/oss_warning.png">
    <Window.Background>
        <ImageBrush ImageSource="Resources/oss_background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/oss_context.png" Stretch="None"/>
        </Grid.Background>
        <RepeatButton x:Name="btnMenu" DockPanel.Dock="Top" Delay="5000" Interval="1000" Content="Menu" Click="btnMenu_Click" HorizontalAlignment="Right" Width="224" Height="142" VerticalAlignment="Top" PreviewMouseLeftButtonUp="btnMenu_PreviewMouseLeftButtonUp" Background="{x:Null}" Opacity="0.2"/>
    </Grid>
</Window>
