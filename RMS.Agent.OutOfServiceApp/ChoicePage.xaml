<Page x:Class="RMS.Agent.OutOfServiceApp.ChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:WpfKb.Controls;assembly=WpfKb"
      mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="270"
	Title="ChoicePage" Width="400" Height="270">

    <Grid Background="White" Margin="0,0,0,0">
        <Button x:Name="btnOk" Content="Launch SKS Kiosk" HorizontalAlignment="Center" Margin="120,70,120,0" VerticalAlignment="Top" Width="160" Click="btnOk_Click" IsDefault="True" TabIndex="2" Height="40"/>
        <Button x:Name="btnExitApp" Content="Exit App" HorizontalAlignment="Center" Margin="120,126,120,0" VerticalAlignment="Top" Width="160" TabIndex="3" Height="40" Click="btnExitApp_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Center" Margin="120,184,120,0" VerticalAlignment="Top" Width="160" Click="btnCancel_Click" TabIndex="3" Height="40"/>
        <Label Content="Please select ..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="36" Background="Gray" Foreground="White" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Page>
